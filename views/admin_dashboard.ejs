<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/styles/main.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="/scripts/dashboard.js" defer></script>
</head>
<body>
  <div id="admin-dashboard">
    <!-- Navigation Bar -->
    <nav class="navbar">
      <ul class="nav-links">
        <li><a href="#" class="nav-link active" data-section="orders-section">Manage Orders</a></li>
        <li><a href="#" class="nav-link" data-section="inventory-section">Inventory</a></li>
        <li><a href="#" class="nav-link" data-section="history-section">Order History</a></li>
      </ul>
      <!-- Logo -->
      <div class="nav-logo">
        <img src="/images/Birdie_Num_Num_Logo_1.png" alt="Admin Logo">
      </div>
    </nav>

    <!-- Manage Orders Section -->
    <div id="orders-section" class="content-section">
      <h1>Manage Orders</h1>
      <div id="orders-container">
        <!-- Orders will be dynamically loaded here -->
      </div>
      <h2>Order Status</h2>
      <table id="order-status-table">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Items</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <!-- Approved/Rejected orders will be dynamically added here -->
        </tbody>
      </table>
    </div>

    <!-- Inventory Section -->
    <div id="inventory-section" class="content-section" style="display: none;">
      <h1>Inventory</h1>
      <table>
        <thead>
          <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Availability</th>
          </tr>
        </thead>
        <tbody id="inventory-table">
          <!-- Inventory data will be dynamically loaded here -->
        </tbody>
      </table>
    </div>

    <!-- Order History Section -->
    <div id="history-section" class="content-section" style="display: none;">
      <h1>Order History</h1>
      <!-- Search Input -->
      <input type="text" id="history-search" placeholder="Search orders by customer or item">
      <table>
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Items</th>
            <th>Quantity</th>
            <th>Time Placed</th>
          </tr>
        </thead>
        <tbody id="history-table">
          <!-- Order history data will be dynamically loaded here -->
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>




























