<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/styles/main.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="/scripts/dashboard.js" defer></script>
</head>
<body>
  <div id="admin-dashboard">
    <!-- Navigation Bar -->
    <nav class="navbar">
      <ul class="nav-links">
        <li><a href="#" class="nav-link active" data-section="orders-section">Manage Orders</a></li>
        <li><a href="#" class="nav-link" data-section="inventory-section">Inventory</a></li>
        <li><a href="#" class="nav-link" data-section="history-section">Order History</a></li>
      </ul>
      <!-- Logo -->
      <div class="nav-logo">
        <img src="/images/Birdie Num Num Logo 1.png" alt="Admin Logo">
      </div>
    </nav>

    <!-- Manage Orders Section -->
    <div id="orders-section" class="content-section">
      <h1>Manage Orders</h1>
      <div id="orders-container">
        <div class="order">
          <p><strong>Customer:</strong> John Doe</p>
          <p><strong>Items:</strong> Pizza</p>
          <p><strong>Time to Complete:</strong> 15 min</p>
          <button class="approve-btn">Approve</button>
          <button class="reject-btn">Reject</button>
        </div>
      </div>
      <h2>Order Status</h2>
      <table id="order-status-table">
        <thead>
          <tr>
            <th>Order</th>
            <th>Status</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>

    <!-- Inventory Section -->
    <div id="inventory-section" class="content-section" style="display: none;">
      <h1>Inventory</h1>
      <table>
        <thead>
          <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody id="inventory-table">
          <tr>
            <td>Burgers</td>
            <td>25</td>
            <td>In Stock</td>
          </tr>
          <tr>
            <td>Fries</td>
            <td>10</td>
            <td>Low Stock</td>
          </tr>
          <tr>
            <td>Pizza</td>
            <td>5</td>
            <td>Out of Stock</td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Order History Section -->
    <div id="history-section" class="content-section" style="display: none;">
      <h1>Order History</h1>
      <input type="text" id="history-search" placeholder="Search Orders">
      <table>
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Items</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>101</td>
            <td>Jane Doe</td>
            <td>Burger</td>
            <td>Approved</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>


















